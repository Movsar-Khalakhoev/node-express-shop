<div class="auth">
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s6"><a class="active" href="#login">Войти</a></li>
				<li class="tab col s6"><a class="active" href="#register">Регистарция</a></li>
			</ul>
		</div>
		<div id="login" class="col s6 offset-s3 login-form">

			{{#if loginError}}
				<p class="alert">{{loginError}}</p>
			{{/if}}
			<h2 class="center">Авторизация</h2>
			<form action="/auth/login" method="post">
				<div class="input-field col s12">
					<input name="email" id="email" type="text" class="validate" required>
					<label for="email">Email</label>
					<span class="helper-text" data-error="Введите email" data-success=""></span>
				</div>
				<div class="input-field col s12">
					<input name="password" id="password" type="password" class="validate" required>
					<label for="password">Пароль</label>
					<span class="helper-text" data-error="Введите пароль" data-success=""></span>
				</div>
				<p><a href="/auth/reset">Забыли пароль?</a></p>

				<input type="hidden" name="_csrf" value="{{csrf}}">
				<button type="submit" class="btn btn-primary">Войти</button>
			</form>
		</div>
		<div id="register" class="col s6 offset-s3 registration-form">
			{{#if registerError}}
				<p class="alert">{{registerError}}</p>
			{{/if}}
			<h2 class="center">Регистрация</h2>
			<form action="/auth/register" method="post" novalidate>
				<div class="input-field col s12">
					<input name="email" id="remail" type="text" class="validate" required>
					<label for="remail">Email</label>
					<span class="helper-text" data-error="Введите email" data-success=""></span>
				</div>
				<div class="input-field col s12">
					<input name="name" id="name" type="text" class="validate" required>
					<label for="name">Ваше имя</label>
					<span class="helper-text" data-error="Введите имя" data-success=""></span>
				</div>
				<div class="input-field col s12">
					<input name="password" id="rpassword" type="password" class="validate" required>
					<label for="rpassword">Пароль</label>
					<span class="helper-text" data-error="Введите пароль" data-success=""></span>
				</div>
				<div class="input-field col s12">
					<input name="confirm" id="confirm" type="text" class="validate" required>
					<label for="confirm">Повторите пароль</label>
					<span class="helper-text" data-error="Введите пароль" data-success=""></span>
				</div>

				<input type="hidden" name="_csrf" value="{{csrf}}">
				<button type="submit" class="btn btn-primary">Зарегистрироваться</button>
			</form>
		</div>
	</div>
</div>
