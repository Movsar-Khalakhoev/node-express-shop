<div class="row">
	<div class="col s6 offset-s3">

		{{#if error}}
			<p class="alert">{{error}}</p>
		{{/if}}
		<h2 class="center">Восстановление пароля</h2>
		<form action="/auth/reset" method="post">
			<div class="input-field col s12">
				<input name="email" id="email" type="text" class="validate" required>
				<label for="email">Email</label>
				<span class="helper-text" data-error="Введите email" data-success=""></span>
			</div>
			<input type="hidden" name="_csrf" value="{{csrf}}">
			<button type="submit" class="btn btn-primary">Сбросить</button>
		</form>
	</div>
</div>
