<h1>Редактировать курс {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">
	<div class="input-field col s6">
		<input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
		<label for="title">Название курса</label>
		<span class="helper-text" data-error="Введите название" data-success=""></span>
	</div>
	<div class="input-field col s6">
		<input name="price" id="price" type="text" class="validate" required min="1" value="{{course.price}}">
		<label for="price">Цена</label>
		<span class="helper-text" data-error="Введите цену" data-success=""></span>
	</div>
	<div class="input-field col s6">
		<input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
		<label for="img">URL картинки</label>
		<span class="helper-text" data-error="Введите URL картинки" data-success=""></span>
	</div>

	<input type="hidden" name="_csrf" value="{{csrf}}">
	<input type="hidden" name="id" value="{{course.id}}">

	<button type="submit" class="btn btn-primary">Сохранить</button>
</form>

<form action="/courses/remove" method="post">
	<input type="hidden" name="_csrf" value="{{csrf}}">
	<input type="hidden" name="id" value="{{course.id}}">
	<button class="btn red">Удалить</button>
</form>
