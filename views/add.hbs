<h1>Добавить новый курс</h1>

{{#if error}}
	<p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="post" novalidate>
	<div class="input-field col s6">
		<input name="title" id="title" type="text" class="validate" required value="{{data.title}}">
		<label for="title">Название курса</label>
		<span class="helper-text" data-error="Введите название" data-success=""></span>
	</div>
	<div class="input-field col s6">
		<input name="price" id="price" type="text" class="validate" required min="1" value="{{data.price}}">
		<label for="price">Цена</label>
		<span class="helper-text" data-error="Введите цену" data-success=""></span>
	</div>
	<div class="input-field col s6">
		<input name="img" id="image" type="text" class="validate" required value="{{data.img}}">
		<label for="image">URL картинки</label>
		<span class="helper-text" data-error="Введите URL картинки" data-success=""></span>
	</div>

	<input type="hidden" name="_csrf" value="{{csrf}}">
	<button class="btn btn-primary">Добавить курс</button>
</form>
